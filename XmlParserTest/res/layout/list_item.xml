<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="50dp"
        android:background="#ffffffff" >

        <ImageView
            android:id="@+id/thumbNail"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/sm" 
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/thumbNail"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="삐뽀삐뽀 119 우리 아가 모유 먹이기"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="정유미,하정훈"
            android:textSize="15dp" android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/author"
            android:layout_toRightOf="@id/author"
            android:ellipsize="start"
            android:singleLine="true" android:textStyle="bold"
            android:text="  |  그린비라이프"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/author"
            android:ellipsize="start"
            android:singleLine="true" android:textStyle="bold"
            android:text="출간일 : 2009.05.25"
            android:textSize="15dp" 
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/date"
            android:ellipsize="start" android:textStyle="bold"
            android:singleLine="true"
            android:text="ISBN  : 9788976820853"
            android:textSize="16dp" 
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
        
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="start"
            android:singleLine="true"
            android:text="대출 가능"
            android:textStyle="bold"
            android:textSize="18dp" 
            android:padding="4dp"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"/> 
            
        
    </RelativeLayout>